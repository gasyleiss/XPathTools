<UserControl x:Class="ReasonCodeExample.XPathInformation.Workbench.XPathWorkbench"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ReasonCodeExample.XPathInformation.Workbench"
             mc:Ignorable="d"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}">
    <UserControl.Resources>
        <Image x:Key="Find" Source="../VisualStudioIntegration/Resources/Find.png" />
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
    </UserControl.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Image Source="../VisualStudioIntegration/Resources/XPath.png" Grid.Row="0" Grid.Column="0" />
            <TextBox Grid.Column="1" Grid.Row="0" MinWidth="300" Margin="3" ToolTip="XPath" Name="SearchTextBox"
                     KeyDown="OnSearchKeyDownHandler" />
            <Button Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" Margin="3" Padding="3"
                    Content="{StaticResource Find}"
                    ToolTip="Search" Click="SearchButtonClick" />
        </Grid>
        <ScrollViewer DockPanel.Dock="Top" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ListView SelectionMode="Single" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10,0,0"
                      Name="SearchResultList">
                <ListView.ItemsSource>
                    <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type local:XPathWorkbench}}"
                             Path="SearchResults" />
                </ListView.ItemsSource>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="OnSearchResultClicked" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" Header="Value">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Value}" Width="200" TextTrimming="CharacterEllipsis"
                                               TextWrapping="Wrap" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Path=LineNumber}"
                                        Header="Line number" />
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Path=LinePosition}"
                                        Header="Line position" />
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
    </DockPanel>
</UserControl>